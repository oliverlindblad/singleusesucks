---
import MainLayout from "../layouts/MainLayout.astro";
import { onMount } from "astro/client"; // Ensure scripts run after mount
import { animate, scroll } from "motion";
import Button from '../components/Button.astro';
import Link from '../components/Link.astro';
import Form from '../components/Form.astro';
import { Image } from 'astro:assets';
import thumbsup from "../assets/images/thumbsup.png";
---


<MainLayout title="SingleUseSucks">
  <article>
    <div class="relative w-full h-screen">
      <!-- Background Image -->
      <img src="/ocean2.webp" alt="Baggrunds billede til hero sektion">

      <!-- Huge Title -->
    <article class="absolute top-2/4 left-1/2 -translate-x-1/2 -translate-y-1/2  justify-center text-center mt-[-30px] lg:mt-3 col-span-12 z-20"> 
      <h1 class="relative z-30 text-[50px] md:text-[100px] lg:text-[140px] font-display text-white">SINGLE USE</h1> 
      <h1 class="text-[150px] md:text-[280px] lg:text-[380px] leading-[26px] md:leading-[55px] font-display text-rose-500 pb-20 md:pb-32 lg:pb-36">SUCKS</h1> 
    </article>

      <!-- Centered Turtle Image -->
      <div class="parallaxgrafik absolute top-3/4 left-1/2 -translate-x-1/2 -translate-y-1/2">
        <img src="/turtle.webp" alt="Turtle" class="w-150 md:w-150 parallaxgrafik4">
      </div>

