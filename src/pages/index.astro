<script>
  import { animate, scroll, inView } from "motion";

 document.addEventListener("DOMContentLoaded", () => {
  setTimeout(() => {
    scroll(animate(".parallaxgrafik1", { y: [400, -600] }), {
      target: document.querySelector(".parallaxgrafik"), 
      offset: ["start end", "end start"]
    });

    scroll(animate(".parallaxgrafik2", { x: [-1000, 2000], y: [200, 100] }), {
      target: document.querySelector(".parallaxgrafik"), 
      offset: ["start end", "end start"]
    });

    scroll(animate(".parallaxgrafik3", { x: [-1500, 900], y: [400, 0] }), {
      target: document.querySelector(".parallaxgrafik"), 
      offset: ["start end", "end start"]
    });

    scroll(animate(".parallaxgrafik4", { x: [-1000, 1000], y: [400, 0] }), {
      target: document.querySelector(".parallaxgrafik"), 
      offset: ["start end", "end start"]
    });
  }, 500); // Delay ensures images are loaded first
});


  	/* Horisontal scroll sektion */
	scroll(
	animate("#horisontalliste", {
		transform: ["none", "translateX(-200vw)"]
	}),
	{ target: document.querySelector("#horisontalscrollsection") }
