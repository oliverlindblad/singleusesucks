  /* inView animation */
inView( ".fotoinview" , () =>{
animate( ".fotoinview", { x: [-2000, 100 ] }, { duration: 2 })
animate( ".fotoinview2", { x: [2000, 750 ] }, { delay: 3, duration: 2 })
animate( ".fotoinview3", { x: [-2000, 100 ] }, { delay: 6, duration: 2 })
animate( ".fotoinview4", { x: [2000, 750 ] }, { delay: 9, duration: 2 })
})


  
</script>
